
/*Load...*/
#loading-mask{
	position:absolute;
	left:0;
	top:0;
    width:100%;
    height:100%;
    z-index:20000;
    background-color:white;
}
#loading{
	position:absolute;
	left:45%;
	top:40%;
	padding:2px;
	z-index:20001;
    height:auto;
}

#loading img {
    margin-bottom:5px;
}
#loading .loading-indicator{
	background:white;
	color:#555;
	font:bold 13px tahoma,arial,helvetica;
	padding:10px;
	margin:0;
    text-align:center;
    height:auto;
}

/* Tree */
.x-tree-selected {
	border:1px dotted #a3bae9;
	background:#DFE8F6;
}
.x-node-ctx {
	background:#eee !important;
	border:1px solid #ccc !important;
}